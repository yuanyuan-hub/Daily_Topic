public class Solution {
    public int Add(int num1,int num2) {
        if(num2 == 0){
            return num1;
        }
        if(num1 == 0) {
            return num2;
        }
        int result = 0;
        while(num2 != 0) {
            result = num2 ^ num1;
            num2 = (num1 & num2) << 1;
            num1= result;
        }
        return result;
    }
}
