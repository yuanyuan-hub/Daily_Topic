class Solution {
    public int peakIndexInMountainArray(int[] arr) {
        int left = 1;
        int right = arr.length - 1;
        while(left <= right) {
            int mid = (left + right) / 2;
            if(arr[mid] > arr[mid + 1] && (arr[mid] > arr[mid - 1])) {
                return mid;
            } else if (arr[mid] < arr[mid + 1]){
                left = mid;
            } else {
                right = mid;
            }
        }
        return -1;
    }
}
